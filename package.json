{
    "name": "decus-core",
    "scripts": {
        "check": "npm run lint && prettier --ignore-path .gitignore -c .",
        "fmt": "prettier --ignore-path .gitignore -w .",
        "lint": "eslint --ext .js,.ts --ignore-path .gitignore .",
        "test": "hardhat test",
        "coverage": "hardhat coverage --solcoverjs ./.decus.solcover.js",
        "compile": "SKIP_LOAD=1 hardhat compile",
        "deploy": "hardhat deploy",
        "deploy:kovan": "hardhat deploy --network kovan",
        "verify:kovan": "npx hardhat etherscan-verify --network kovan",
        "deploy:ropsten": "hardhat deploy --network ropsten",
        "verify:ropsten": "npx hardhat etherscan-verify --network ropsten"
    },
    "devDependencies": {
        "@ethersproject/experimental": "^5.3.0",
        "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.10",
        "@nomiclabs/hardhat-etherscan": "^2.1.3",
        "@nomiclabs/hardhat-waffle": "^2.0.1",
        "@openzeppelin/contracts": "^3.4.1",
        "@typechain/ethers-v5": "^6.0.5",
        "@types/chai": "^4.2.18",
        "@types/edit-json-file": "^1.4.0",
        "@types/mocha": "^8.2.0",
        "@types/node": "^14.17.3",
        "@typescript-eslint/eslint-plugin": "^4.27.0",
        "@typescript-eslint/parser": "^4.27.0",
        "chai": "^4.3.0",
        "dotenv": "^8.6.0",
        "edit-json-file": "^1.5.0",
        "eslint": "^7.28.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "ethereum-waffle": "^3.4.0",
        "ethers": "^5.3.1",
        "hardhat": "^2.4.0",
        "hardhat-deploy": "^0.7.11",
        "hardhat-gas-reporter": "^1.0.4",
        "hardhat-typechain": "^0.3.5",
        "mocha": "^9.0.0",
        "prettier": "^2.3.1",
        "prettier-plugin-solidity": "^1.0.0-beta.13",
        "solidity-coverage": "^0.7.12",
        "ts-combinatorics": "^1.0.0",
        "ts-generator": "^0.1.1",
        "ts-node": "^9.1.1",
        "typechain": "^4.0.3",
        "typescript": "^4.3.4"
    },
    "dependencies": {}
}

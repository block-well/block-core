{
    "name": "decus-core",
    "scripts": {
        "check": "npm run lint && prettier --ignore-path .gitignore -c .",
        "fmt": "prettier --ignore-path .gitignore -w .",
        "lint": "eslint --ext .js,.ts --ignore-path .gitignore .",
        "test": "unset SKIP_TIMELOCK && hardhat test",
        "coverage": "hardhat coverage --solcoverjs ./.decus.solcover.js",
        "compile": "SKIP_LOAD=1 hardhat compile",
        "deploy": "hardhat deploy",
        "deploy:kovan": "hardhat deploy --network kovan",
        "verify:kovan": "npx hardhat etherscan-verify --network kovan",
        "deploy:ropsten": "hardhat deploy --network ropsten",
        "verify:ropsten": "npx hardhat etherscan-verify --network ropsten",
        "deploy:bsct": "hardhat deploy --network bsct",
        "verify:bsct": "hardhat etherscan-verify --network bsct",
        "deploy:bsc": "hardhat deploy --network bsc",
        "verify:bsc": "hardhat etherscan-verify --network bsc",
        "abi:go": "abigen --abi=./build/abi/DeCusSystem.json --pkg=abi --type=DeCusSystem --out=../decus-keeper-client/eth/abi/decus_system.go && abigen --abi=./build/abi/KeeperRegistry.json --pkg=abi --type=KeeperRegistry --out=../decus-keeper-client/eth/abi/keeper_registry.go"
    },
    "devDependencies": {
        "@ethersproject/experimental": "^5.4.0",
        "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.10",
        "@nomiclabs/hardhat-etherscan": "^2.1.6",
        "@nomiclabs/hardhat-waffle": "^2.0.1",
        "@openzeppelin/contracts": "^3.4.2-solc-0.7",
        "@typechain/ethers-v5": "^6.0.5",
        "@types/chai": "^4.2.21",
        "@types/edit-json-file": "^1.6.0",
        "@types/mocha": "^8.2.3",
        "@types/node": "^14.17.17",
        "@typescript-eslint/eslint-plugin": "^4.31.1",
        "@typescript-eslint/parser": "^4.31.1",
        "axios": "^0.21.4",
        "bitcoinjs-lib": "^5.2.0",
        "chai": "^4.3.0",
        "dayjs": "^1.10.7",
        "dotenv": "^8.6.0",
        "edit-json-file": "^1.5.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "ethereum-waffle": "^3.4.0",
        "ethers": "^5.4.7",
        "hardhat": "^2.6.4",
        "hardhat-abi-exporter": "^2.3.0",
        "hardhat-deploy": "^0.7.11",
        "hardhat-gas-reporter": "^1.0.4",
        "hardhat-typechain": "^0.3.5",
        "keccak256": "^1.0.3",
        "merkletreejs": "^0.2.24",
        "mocha": "^9.1.1",
        "prettier": "^2.4.1",
        "prettier-plugin-solidity": "^1.0.0-beta.18",
        "solidity-coverage": "^0.7.17",
        "ts-combinatorics": "^1.0.0",
        "ts-generator": "^0.1.1",
        "ts-node": "^9.1.1",
        "typechain": "^4.0.3",
        "typescript": "^4.4.3"
    }
}
